<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeMAUI.RecipeList"
             Title="RecipeList">
    <Grid RowDefinitions="Auto,*" HorizontalOptions="Center" RowSpacing="10">
        <Button x:Name="SearchBtn" Text="Search" Grid.Row="0" Clicked="SearchBtn_Clicked"/>
        <ListView x:Name="RecipeLst" Grid.Row="1">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                        <Grid RowDefinitions="Auto" ColumnDefinitions="Auto,*" ColumnSpacing="10">
                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Path=[RecipeName]}"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Path=[RecipeStatus]}"/>
                        </Grid>
                    </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    </Grid>
</ContentPage>