<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeMAUI.RecipeList"
             Title="RecipeList">
    <Grid RowDefinitions="Auto,*" HorizontalOptions="Center" RowSpacing="10" ColumnDefinitions="Auto,*">
        <Button x:Name="SearchBtn" Text="Search" Grid.Row="0" Clicked="SearchBtn_Clicked" HorizontalOptions="Center"/>
        <Button x:Name="NewBtn" Text="New Recipe" Grid.Column="3" Grid.Row="0" Clicked="NewBtn_Clicked"/>
        <ListView x:Name="RecipeLst" Grid.Row="2" Grid.ColumnSpan="2" ItemTapped="RecipeLst_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto" ColumnSpacing="10" HorizontalOptions="Center">
                            <Image Grid.Row="0" Grid.Column="0" WidthRequest="65" HeightRequest="65" Source="{Binding RecipePicture}"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding RecipeName}" HorizontalOptions="StartAndExpand"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>